version: '3'
services:
  
  db_postgres_examples:
    image: postgres:11
    environment:
      POSTGRES_USER: sa
      POSTGRES_PASSWORD: root
      POSTGRES_DB: postgres
    volumes:
      - postgresql:/var/lib/postgresql
      - postgres11-data:/var/lib/postgresql/data
    ports:
      - "5432:5432"
  jaeger-server:
    image: jaegertracing/all-in-one:latest
    environment: 
      COLLECTOR_ZIPKIN_HTTP_PORT: 9411
    ports:
      - "5775:5775/udp"
      - "6831:6831/udp"
      - "6832:6832/udp"
      - "5778:5778"
      - "16686:16686"
      - "14268:14268"
      - "9411:9411"
  redis:
    network_mode: host
    image: "bitnami/redis"
    command: redis-server --requirepass sOmE_sEcUrE_pAsS
  #redis:
  #  network_mode: host
  #  image: "bitnami/redis"
  #  environment:
  #    - ALLOW_EMPTY_PASSWORD=yes
volumes:
  postgresql:
  postgres11-data:
    driver: local